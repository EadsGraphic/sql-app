<section id="gigs" class="container">
    <h1>All Gigs</h1>

    {{#each gigs}}
    <div class="gig">
        <h3>{{title}}</h3>
        <p>{{description}}</p>
        <ul class="list-unstyled">
            <li>
                <h4>Budget</h4>
                <div class="price">
                    <i class="fas fa-dollar-sign"></i>
                    <p>{{budget}}</p>
                </div>
            </li>
            <li><a href="mailto:{{contact_email}}" class="btn btn-primary">Apply Now</a></li>
        </ul>
        <div class="tech">
            <small>Technologies Needed: <span>{{technologies}}</span></small>
        </div>
    </div>
    {{else}}
    <p>No gigs available</p>
    {{/each}}

</section>